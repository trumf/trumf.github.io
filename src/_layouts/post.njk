---
layout: base.njk
---

<article class="section_padding">
    <div class="section_content">
        <div class="post-meta">
            <time datetime="{{ date | dateToISO }}">{{ date | dateToISO }}</time>
            {% if tags %}
            <div class="tags">
                {% for tag in tags %}
                <span class="tag">{{ tag }}</span>
                {% endfor %}
            </div>
            {% endif %}
        </div>

        <div class="post-content">
            {{ content | safe }}
        </div>
    </div>
</article>